#include <iostream>

using namespace std;

int main()
{
    int inteiros[10], i, maior = 0, menor = 0;

    float media = 0;


    for (i=0; i<10; i++)
        {
        cout << "Digite o valor inteiro ";
        cin >> inteiros[i];

        media = inteiros[i] + media;

         if(inteiros[i] > maior)
    {
            maior = inteiros[i];
    }
        if(inteiros[i] < maior){

            menor = inteiros[i];
            }
        }

        media = media/i;
        cout << "O maior valor e: " << maior << " e o menor " << menor << endl;
        cout << "A media eh: " << media;
}
